<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_layout_height"
        android:background="@color/title_bgcolor">

        <com.ihealth.aijiakang.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/account_bind"
            android:textColor="@color/title_color"
            android:textSize="@dimen/textsize_18"
            custom:fontWeight="1" />

        <com.ihealth.aijiakang.widgets.ClickAlphaFrameLayout
            android:id="@+id/accountbind_return"
            android:layout_width="@dimen/return_w"
            android:layout_height="match_parent">

            <com.ihealth.aijiakang.widgets.RecycleImageView
                android:layout_width="@dimen/return_pic_w"
                android:layout_height="@dimen/return_pic_h"
                android:layout_gravity="center"
                android:src="@mipmap/return_pic" />
        </com.ihealth.aijiakang.widgets.ClickAlphaFrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_bgcolor"
        android:orientation="vertical"
        android:paddingTop="@dimen/accountbind_padding">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/line_color"></View>

        <com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout
            android:id="@+id/accountbind_wechat_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height"
            android:background="@color/layout_item_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/accountbind_padding">

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/accountbind_icon_size"
                    android:layout_height="@dimen/accountbind_icon_size"
                    android:src="@mipmap/bind_wechat" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/accountbind_tv_margin_left"
                    android:text="@string/wechat_txt"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/accountbind_padding">

                    <com.ihealth.aijiakang.widgets.SwitchImageView
                        android:id="@+id/accountbind_wechat_select_icon"
                        android:layout_width="@dimen/accountbind_select_icon_size"
                        android:layout_height="@dimen/accountbind_select_icon_size"
                        custom:offSrc="@mipmap/accountbind_unselect"
                        custom:onSrc="@mipmap/accountbind_select" />

                    <com.ihealth.aijiakang.widgets.FontTextView
                        android:id="@+id/accountbind_wechat_select_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/accountbind_right_interval"
                        android:text="@string/accoundbind_unbind"
                        android:textColor="@color/text_shadow_color"
                        android:textSize="@dimen/textsize_14" />

                    <com.ihealth.aijiakang.widgets.RecycleImageView
                        android:layout_width="@dimen/arrow_w"
                        android:layout_height="@dimen/arrow_h"
                        android:layout_marginLeft="@dimen/accountbind_right_interval"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/accountbind_padding"
                android:background="@color/shadow_line_color"></View>
        </com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout>

        <com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout
            android:id="@+id/accountbind_mi_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height"
            android:background="@color/layout_item_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/accountbind_padding">

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/accountbind_icon_size"
                    android:layout_height="@dimen/accountbind_icon_size"
                    android:src="@mipmap/bind_mi" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/accountbind_tv_margin_left"
                    android:text="@string/mi_txt"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/accountbind_padding">

                    <com.ihealth.aijiakang.widgets.SwitchImageView
                        android:id="@+id/accountbind_mi_select_icon"
                        android:layout_width="@dimen/accountbind_select_icon_size"
                        android:layout_height="@dimen/accountbind_select_icon_size"
                        custom:offSrc="@mipmap/accountbind_unselect"
                        custom:onSrc="@mipmap/accountbind_select" />

                    <com.ihealth.aijiakang.widgets.FontTextView
                        android:id="@+id/accountbind_mi_select_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/accountbind_right_interval"
                        android:text="@string/accoundbind_unbind"
                        android:textColor="@color/text_shadow_color"
                        android:textSize="@dimen/textsize_14" />

                    <com.ihealth.aijiakang.widgets.RecycleImageView
                        android:layout_width="@dimen/arrow_w"
                        android:layout_height="@dimen/arrow_h"
                        android:layout_marginLeft="@dimen/accountbind_right_interval"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/accountbind_padding"
                android:background="@color/shadow_line_color"></View>
        </com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout>

        <com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout
            android:id="@+id/accountbind_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_height"
            android:background="@color/layout_item_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/accountbind_padding">

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/accountbind_icon_size"
                    android:layout_height="@dimen/accountbind_icon_size"

                    android:src="@mipmap/bind_phone" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:id="@+id/accountbind_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/accountbind_tv_margin_left"
                    android:text="@string/phone_txt"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/accountbind_padding">

                    <com.ihealth.aijiakang.widgets.FontTextView
                        android:id="@+id/accountbind_phone_change_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/accountbind_change_bg"
                        android:gravity="center"
                        android:text="@string/accoundbind_change"
                        android:textColor="@color/orange_color"
                        android:textSize="@dimen/textsize_14" />

                    <LinearLayout
                        android:id="@+id/accountbind_phone_unbind_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.ihealth.aijiakang.widgets.RecycleImageView
                            android:layout_width="@dimen/accountbind_select_icon_size"
                            android:layout_height="@dimen/accountbind_select_icon_size"
                            android:src="@mipmap/accountbind_unselect" />

                        <com.ihealth.aijiakang.widgets.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/accountbind_right_interval"
                            android:text="@string/accoundbind_unbind"
                            android:textColor="@color/text_shadow_color"
                            android:textSize="@dimen/textsize_14" />

                    </LinearLayout>

                    <com.ihealth.aijiakang.widgets.RecycleImageView
                        android:layout_width="@dimen/arrow_w"
                        android:layout_height="@dimen/arrow_h"
                        android:layout_marginLeft="@dimen/accountbind_right_interval"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
            </LinearLayout>

        </com.ihealth.aijiakang.widgets.ClickAlphaRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/line_color"></View>

    </LinearLayout>
</LinearLayout>