<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:id="@+id/button_getVerifyCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交验证码"
        android:id="@+id/button_commitVerifyCode"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_getVerifyCode"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/button_register"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_commitVerifyCode"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三方注册"
        android:id="@+id/button_register_third"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_register"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button_login"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_register_third"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传个人信息"
        android:id="@+id/button_uploadUserInfo"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_login"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载个人信息"
        android:id="@+id/button_downloadUserInfo"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_uploadUserInfo"/>

</RelativeLayout>
