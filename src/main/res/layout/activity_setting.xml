<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_layout_height">

        <com.ihealth.aijiakang.widgets.FontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_bgcolor"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/title_color"
            android:textSize="@dimen/textsize_18"
            custom:fontWeight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"></View>

        <com.ihealth.aijiakang.widgets.ClickAlphaFrameLayout
            android:id="@+id/setting_return"
            android:layout_width="@dimen/return_w"
            android:layout_height="match_parent">

            <com.ihealth.aijiakang.widgets.RecycleImageView
                android:layout_width="@dimen/return_pic_w"
                android:layout_height="@dimen/return_pic_h"
                android:layout_gravity="center"
                android:src="@mipmap/return_pic" />
        </com.ihealth.aijiakang.widgets.ClickAlphaFrameLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_bgcolor"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ihealth.aijiakang.widgets.ClickBgRelativeLayout
                android:id="@+id/setting_acount_bind_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:layout_marginTop="@dimen/host_me_little_interval"
                android:background="@color/layout_item_color">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:background="@color/line_color"></View>

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/host_me_item_icon_size"
                    android:layout_height="@dimen/host_me_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:src="@mipmap/account_bind" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_item_tv_margin_left"
                    android:text="@string/account_bind"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/arrow_w"
                    android:layout_height="@dimen/arrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/host_me_padding_lr"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"></View>
            </com.ihealth.aijiakang.widgets.ClickBgRelativeLayout>


            <com.ihealth.aijiakang.widgets.ClickBgRelativeLayout
                android:id="@+id/setting_change_passwd_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:layout_marginTop="@dimen/host_me_little_interval"
                android:background="@color/layout_item_color">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:background="@color/line_color"></View>

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/host_me_item_icon_size"
                    android:layout_height="@dimen/host_me_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:src="@mipmap/change_passwd" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_item_tv_margin_left"
                    android:text="@string/change_passwd"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/arrow_w"
                    android:layout_height="@dimen/arrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/host_me_padding_lr"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:background="@color/shadow_line_color"></View>
            </com.ihealth.aijiakang.widgets.ClickBgRelativeLayout>

            <com.ihealth.aijiakang.widgets.ClickBgRelativeLayout
                android:id="@+id/setting_perfect_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:background="@color/layout_item_color">

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/host_me_item_icon_size"
                    android:layout_height="@dimen/host_me_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:src="@mipmap/perfect_setting" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_item_tv_margin_left"
                    android:text="@string/prefer_setting"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/arrow_w"
                    android:layout_height="@dimen/arrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/host_me_padding_lr"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"></View>
            </com.ihealth.aijiakang.widgets.ClickBgRelativeLayout>


            <com.ihealth.aijiakang.widgets.ClickBgRelativeLayout
                android:id="@+id/setting_normal_problems_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:layout_marginTop="@dimen/host_me_little_interval"
                android:background="@color/layout_item_color">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:background="@color/line_color"></View>

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/host_me_item_icon_size"
                    android:layout_height="@dimen/host_me_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:src="@mipmap/problems" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_item_tv_margin_left"
                    android:text="@string/normal_problems"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/arrow_w"
                    android:layout_height="@dimen/arrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/host_me_padding_lr"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:background="@color/shadow_line_color"></View>
            </com.ihealth.aijiakang.widgets.ClickBgRelativeLayout>

            <com.ihealth.aijiakang.widgets.ClickBgRelativeLayout
                android:id="@+id/setting_use_intro_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:background="@color/layout_item_color">

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/host_me_item_icon_size"
                    android:layout_height="@dimen/host_me_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_padding_lr"
                    android:src="@mipmap/use_intro" />

                <com.ihealth.aijiakang.widgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/host_me_item_tv_margin_left"
                    android:text="@string/use_intro"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <com.ihealth.aijiakang.widgets.RecycleImageView
                    android:layout_width="@dimen/arrow_w"
                    android:layout_height="@dimen/arrow_h"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/host_me_padding_lr"
                    android:src="@mipmap/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"></View>
            </com.ihealth.aijiakang.widgets.ClickBgRelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_item_height"
                android:layout_marginTop="@dimen/host_me_little_interval">


                <com.ihealth.aijiakang.widgets.ClickBgTextView
                    android:id="@+id/setting_exit_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_item_height"
                    android:background="@color/layout_item_color"
                    android:gravity="center"
                    android:text="@string/exit_account"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/textsize_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:background="@color/line_color"></View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_width"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color"></View>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>