<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ResultsCoordinate">
        <attr name="yMin" format="integer" />
        <attr name="yMax" format="integer" />
        <attr name="rowsY" format="integer" />
        <attr name="columsX" format="integer" />
        <attr name="pointSize" format="reference" />
    </declare-styleable>
    <declare-styleable name="PointsView">
        <attr name="select" format="color" />
        <attr name="unselect" format="color" />
        <attr name="pointNum" format="integer" />
    </declare-styleable>
    <declare-styleable name="SwitchImageView">
        <attr name="offSrc" format="reference" />
        <attr name="onSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="fontPath" format="string" />
        <attr name="fontWeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="editFontPath" format="string" />
        <attr name="editFontWeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="SwitchTextView">
        <attr name="offColor" format="color" />
        <attr name="onColor" format="color" />
        <attr name="offBg" format="reference" />
        <attr name="onBg" format="reference" />
    </declare-styleable>

    <!-- GifView -->
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean"/>
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_weight" format="float"/>
        <attr name="android:layout_gravity"/>
    </declare-styleable>
</resources>